{
  "name": "fasty-demo-api",
  "version": "1.0.0",
  "description": "A boilerplate project for quickly building API using Node.js, TypeScript, Express, MongoDB, and Prisma ORM.",
  "main": "src/index.ts",
  "repository": "https://github.com/KoninMikhail/fasty-pwa-demo-api.git",
  "scripts": {
    "start": "yarn build && pm2 start ecosystem.config.json --no-daemon",
    "dev": "cross-env NODE_ENV=development nodemon src/index.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier --check **/*.ts",
    "prettier:fix": "prettier --write **/*.ts",
    "db:push": "prisma db push",
    "db:seed": "ts-node prisma/seed/seed.ts",
    "db:refresh": "ts-node prisma/seed/update-seed.ts",
    "db:studio": "prisma studio",
    "build": "rimraf build && tsc -p tsconfig.json && cp prisma/schema.prisma build/prisma && prisma generate"
  },
  "keywords": [
    "node",
    "node.js",
    "typescript",
    "express",
    "rest",
    "api",
    "prisma",
    "mongodb",
    "es6",
    "es7",
    "es8",
    "es9",
    "passport",
    "joi",
    "eslint",
    "prettier"
  ],
  "author": "Mikhail Konin",
  "license": "MIT",
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.5.1",
    "@types/passport": "^1.0.16",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/xss-filters": "^0.0.30",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.9.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.5",
    "lint-staged": "^15.2.9",
    "node-mocks-http": "^1.15.1",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.3",
    "prisma": "^5.19.0",
    "prisma-dbml-generator": "^0.12.0",
    "standard-version": "^9.5.0",
    "supertest": "^7.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "@joi/date": "^2.1.1",
    "@prisma/client": "^5.19.0",
    "@types/bcryptjs": "^2.4.6",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "date-fns": "^3.6.0",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "helmet": "^7.1.0",
    "http-status": "^1.7.4",
    "joi": "^17.13.3",
    "moment": "^2.30.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pm2": "^5.4.2",
    "prisma-extension-random": "^0.2.2",
    "winston": "^3.14.2",
    "xss-filters": "^1.2.7"
  },
  "prisma": {
    "seed": "ts-node prisma/seed/seed.ts"
  }
}
