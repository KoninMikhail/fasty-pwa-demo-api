{
  "name": "fasty-demo-api",
  "version": "1.0.0",
  "description": "A boilerplate project for quickly building API using Node.js, TypeScript, Express, MongoDB, and Prisma ORM.",
  "main": "src/index.ts",
  "repository": "https://github.com/KoninMikhail/fasty-pwa-demo-api.git",
  "scripts": {
    "start": "yarn build && pm2 start ecosystem.config.json --no-daemon",
    "dev": "cross-env NODE_ENV=development nodemon src/index.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier --check **/*.ts",
    "prettier:fix": "prettier --write **/*.ts",
    "db:push": "prisma db push",
    "db:seed": "ts-node prisma/seed/seed.ts",
    "db:refesh": "ts-node prisma/seed/update-seed.ts",
    "db:studio": "prisma studio",
    "build": "rimraf build && tsc -p tsconfig.json",
    "postinstall": "prisma generate"
  },
  "keywords": [
    "node",
    "node.js",
    "typescript",
    "express",
    "rest",
    "api",
    "prisma",
    "mongodb",
    "es6",
    "es7",
    "es8",
    "es9",
    "passport",
    "joi",
    "eslint",
    "prettier"
  ],
  "author": "Mikhail Konin",
  "license": "MIT",
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@jest/globals": "^29.3.1",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.2.5",
    "@types/morgan": "^1.9.3",
    "@types/multer": "^1.4.11",
    "@types/node": "^18.11.13",
    "@types/passport": "^1.0.11",
    "@types/passport-jwt": "^3.0.7",
    "@types/supertest": "^2.0.12",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/xss-filters": "^0.0.27",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "lint-staged": "^13.1.0",
    "node-mocks-http": "^1.12.1",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.1",
    "prisma": "^5.18.0",
    "prisma-dbml-generator": "^0.12.0",
    "standard-version": "^9.5.0",
    "supertest": "^6.3.3",
    "swagger-jsdoc": "^6.2.5",
    "swagger-ui-express": "^4.6.0",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@joi/date": "^2.1.1",
    "@prisma/client": "^5.13.0",
    "@types/bcryptjs": "^2.4.2",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "date-fns": "^3.6.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "helmet": "^6.0.1",
    "http-status": "^1.5.3",
    "joi": "^17.7.0",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.0",
    "pm2": "^5.2.2",
    "prisma-extension-random": "^0.2.0",
    "winston": "^3.8.2",
    "xss-filters": "^1.2.7"
  },
  "prisma": {
    "schema": "./prisma/schema.prisma",
    "seed": "ts-node prisma/seed/seed.ts"
  }
}
